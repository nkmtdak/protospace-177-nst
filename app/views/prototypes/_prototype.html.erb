<div class="card">

<%= link_to prototype_path(prototype) do %>
  <%= image_tag url_for(prototype.image.variant(resize: '500x500')), class: :card__img if prototype.image.attached? %>
<% end %>
  <div class="card__body">
    <%= link_to prototype.name, prototype_path(prototype), class: :card__title %>

    <p class="card__summary">
      <%= prototype.catch_copy %>
    </p>
    <%= link_to "by #{prototype.user.user_name}", user_path(prototype.user), class: :card__user %>
  </div>
</div>